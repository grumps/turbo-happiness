#!/usr/bin/env sh
USER=$(whoami)
OBNAM=$(which obnam)
LOGGER=$(which logger)

$LOGGER "starting"
if [ -f /home/$USER/.ssh/config ] && [ -f /home/$USER/$USER.home.obnam.conf ]; then
    $OBNAM backup $HOME --config=/home/$USER/$USER.home.obnam.conf
else
     $LOGGER CONFIG: obnam wrapper for $USER failed
fi
exit $?;