#!/bin/bash -vx

install_dot () {
    local user="$(who am i | awk '{print $1}')"
    
    case "$user" in
        root) prefix="";;
    "") user=root && prefix="";; # we are in chroot?
        *) prefix="/home";;
    esac
    
    local configs_full_path=(/etc/turbo_happiness/*)

    for config_path in "${configs_full_path[@]}"
    do
       # check && remove previous existing config.
        if [[ $config_path == *".dpkg-dist"* ]];
            then
                configs_full_path=(${configs_full_path[@]/$config})
            continue;
        fi        
        config_file=$(basename $config_path)
        # make backup of existing config
        if [[ -e $prefix/$user/.$config_file ]];
            then
                echo "cp $prefix/$user/.$config_file $prefix/$user/$config_file.bk"
                cp $prefix/$user/.$config_file $prefix/$user/$config_file.bk
                echo "rm $prefix/$user/.$config_file"
                rm $prefix/$user/.$config_file;
        fi

    echo "wtf"
        cp /etc/turbo_happiness/$config_file $prefix/$user/.$config_file;
    done
    exit 0
}

echo -n "Would you like to install dotfiles? [yn] "
read install_dot
case "$install_dot" in
    y*|Y*) install_dot;;
    n*|N*) echo "Goodbye...." && exit;;
esac
